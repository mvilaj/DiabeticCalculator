<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foi.dbcal.app">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.foi.dbcal.app.ui.preferences.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="com.foi.dbcal.app.ui.preferences.NotificationReceiver"></receiver>

        <activity android:name="com.foi.dbcal.app.ui.preferences.CustomPreferencesActivity"></activity>
        <receiver android:name="com.foi.dbcal.app.ui.preferences.NotificationPublisher" />
    </application>

</manifest>