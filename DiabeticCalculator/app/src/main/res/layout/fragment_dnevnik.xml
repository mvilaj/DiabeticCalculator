<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DnevnikFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odaberite datum"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/btnDatum"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="30dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Natašte:"
        android:layout_weight="1"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textAlignment="center"
        android:layout_weight="6"
        android:textSize="25dp"
        android:id="@+id/txtGukNataste"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Doručak:"
            android:layout_weight="1"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukDorucakPrije"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukDorucakNakon"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ručak:"
            android:layout_weight="1"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukRucakPrije"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukRucakNakon"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Večera:"
            android:layout_weight="1"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukVeceraPrije"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtGukVeceraNakon"/>


    </LinearLayout>

</LinearLayout>
