<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/odaberite_tip_mjerenja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/spTipMjerenja" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etGuk"
        android:inputType="numberDecimal"
        android:hint="@string/unesite_guk" />

    <TextView
        android:text="@string/odaberite_tip_obroka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvObrok" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/spTipObroka" />

    <Button
        android:text="@string/spremi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpremi"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"/>

</LinearLayout>